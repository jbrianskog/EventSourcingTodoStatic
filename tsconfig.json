{
    // "compileOnSave": true,
    "compilerOptions": {
        "target": "es2015",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "build",
        "strict": true,
        "jsx": "react",
        "plugins": [
            {
                "name": "tslint-language-service",
                "alwaysShowRuleFailuresAsWarnings": true,
                "ignoreDefinitionFiles": true
            }
        ]
    },
    "exclude": [
        "node_modules",
        "docs",
        "build",
        "assets",
        "webpack.config.ts"
    ]
}